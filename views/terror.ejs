<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Terror</title>
       <!-- CSS only -->
       <link
       href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
       rel="stylesheet"
       integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
       crossorigin="anonymous"
     />
     <!-- JavaScript Bundle with Popper -->
     <script
       src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
       integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
       crossorigin="anonymous"
     ></script>
     <!-- bootswatch -->
     <!-- <link rel="stylesheet" href="https://bootswatch.com/5/quartz/bootstrap.min.css"> -->
     <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
     <!-- my-css -->
     <link rel="stylesheet" href="css/main.css">
     <!-- bootstrap bootstrap-icons -->
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <%- include("./partials/navbar.ejs"); %>
    <div class="product-container">
    <%if(productsFiltered.length > 0) { %>
        <% productsFiltered.forEach(e => {%>
            <div class="card-books border-primary mb-3">
                <div class="card-header-books"><%= e.genero.toUpperCase() %></div>
                <div class="card-body">
                  <img src="<%= e.imagen %>" alt="<%= e.nombre %>">
                  <h6 class="card-title text-center"><%= e.nombre %></h6>
                  <p class="card-title text-center"><b><%= e.autor %></b></p>
                  <h5 class="card-title text-center">$ <%= e.precio %></h5>
                  <p hidden><%= e._id%></p>
                  <p hidden><%= e.stock%></p>
                  <div class="container-btn-products d-flex justify-content-center align-items-center">
                    <button class="btn btn-outline-primary btn-less">-</button>
                    <span class="mx-2"><%= e.stock%></span>  
                    <button class="btn btn-outline-primary btn-add">+</button>
                  </div>
                  <div class="container-btn-addCart">
                   <button class="btn btn-outline-primary btn-add-cart" type="submit">AGREGAR</button>
                  </div>
                </div>
              </div>  
        <%})%>
    </div>
    <% } %>
    <%- include("./partials/footer.ejs"); %>
    <script src="js/products.js"></script>
</body>
</html>
