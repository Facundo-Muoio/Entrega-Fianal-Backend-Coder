<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fantasia</title>
      <!-- CSS only -->
      <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <!-- bootswatch -->
    <!-- <link rel="stylesheet" href="https://bootswatch.com/5/quartz/bootstrap.min.css"> -->
    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
    <!-- my-css -->
    <link rel="stylesheet" href="../../css/main.css">
    <link rel="stylesheet" href="../../css/chat.css">
    <link rel="stylesheet" href="../../css/icon-cart.css">
    <!-- bootstrap bootstrap-icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <%- include("./partials/navbar.ejs"); %>
    <% if(user) { %>
      <div class="product-container">
      <% if(productsFiltered.length > 0) {%>
        <div id="products" hidden><%=productsFiltered %></div>
        <% productsFiltered.forEach(e => {%>
          <div class="container-card">
            <a href="/producto/<%=e._id %>">
              <img src="../<%=e.imagen %>" alt="<%=e.nombre%>">
            </a>
            <div class="card-body">
                <p>
                  <b>
                  <%=e.nombre%>
                  </b>
                </p>
                <p class="p-autor"><%=e.autor%></p>
                <p class="p-precio">
                 <b>
                   $<%=e.precio%>
                 </b>
                </p>
            </div>
            <div class="info-hidden" hidden>
              <span><%=e._id%></span>
            </div>
        </div>
        <%})%>
      </div>
      <% } %>
      <div class="card border-primary chat mb-3 hidden" style="max-width: 20rem;">
        <div class="card-header"><h5 class="mb-0">CHAT</h5><i class="bi bi-x"></i></div>
        <div class="card-body chat-box">
        </div>
        <div class="card-footer px-2">
          <form  class="d-flex justify-content-evenly w-100" action="" id="form">
            <div class="form-group me-1">
              <input type="text" class="form-control" placeholder="Mensaje" id="inputDefault">
            </div>
            <button class="btn btn-primary" type="submit" form="form">Enviar</button>
          </form>
        </div>
      </div>
      <i class="bi bi-chat-left-fill"></i>
      <%- include("./partials/modal.ejs"); %>
      <%- include("./partials/footer.ejs"); %>
    <% } %>
  <script src="/socket.io/socket.io.js"></script>
  <script src="../../js/socket_io.js"></script>
  <script src="../../js/product.js"></script>
</body>
</html>